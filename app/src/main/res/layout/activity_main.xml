<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.y0rg.dondecomer.MainActivity"
    android:gravity="bottom|center"
    android:background="#010101"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#010101">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:layout_gravity="center_horizontal|bottom">

            <fragment
                tools:layout="@layout/abc_search_view"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_gravity="center_horizontal|bottom" />

        </FrameLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="top|left"
            android:layout_alignParentTop="true"
            android:enabled="true"
            android:hint="Direccion vacia automatico"
            style="@style/Base.ThemeOverlay.AppCompat.Dark" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:layout_gravity="top|right"
            android:background="@drawable/abc_ic_search_api_mtrl_alpha"
            android:onClick="buscar" />

    </FrameLayout>

</RelativeLayout>
